<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <managed-bean>
        <managed-bean-name>selector</managed-bean-name>
        <managed-bean-class>Selector</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>util</managed-bean-name>
        <managed-bean-class>Util</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>company</managed-bean-name>
        <managed-bean-class>Company</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
        <managed-property>
            <property-name>login</property-name>
            <value>#{login}</value>
        </managed-property></managed-bean>    
    <managed-bean>
        <managed-bean-name>login</managed-bean-name>
        <managed-bean-class>Login</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>  
    <navigation-rule>
        <from-view-id>
            /index.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/start.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule> 
    
    <!-- LOGOUT FROM START PAGE-->
    <navigation-rule>
        <from-view-id>
            /start.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule> 
    
    <!-- COMPANY OPTIONS --> 
    <navigation-rule>
        <from-view-id>
            /start.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>makeOrder</from-outcome>
            <to-view-id>/makeOrder.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>viewOrders</from-outcome>
            <to-view-id>/viewOrders.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>myAccount</from-outcome>
            <to-view-id>/myAccount.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <!-- CREATE ACCOUNT --> 
    <navigation-rule>
        <from-view-id>
            /makeAccount.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>main</from-outcome>
            <to-view-id>/start.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <!-- FROM VIEW ACC TO EDIT ACC PAGE -->
    <navigation-rule>
        <from-view-id>
            /myAccount.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>edit</from-outcome>
            <to-view-id>/companyEditAccount.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <!-- FROM EDIT ACC TO HOME PAGE --> 
    <navigation-rule>
        <from-view-id>
            /companyEditAccount.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>editDone</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    
    
    
    
</faces-config>
